# Environment Configuration
NODE_ENV=production

# API URLs
BACKEND_URL=https://your-backend.onrender.com
NLP_SERVICE_URL=https://your-nlp-service.onrender.com
FRONTEND_URL=https://your-frontend.onrender.com

# Database Configuration (MongoDB Atlas or PostgreSQL)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/airline-booking
# OR for PostgreSQL:
# DATABASE_URL=postgresql://username:password@host:5432/airline-booking

# External Flight API (use real flight data API like Amadeus or Skyscanner)
FLIGHT_API_KEY=your_flight_api_key_here
FLIGHT_API_URL=https://api.amadeus.com/v2
# OR use Skyscanner:
# FLIGHT_API_URL=https://partners.api.skyscanner.net/apiservices

# Redis for session management (optional, for production scaling)
REDIS_URL=redis://username:password@redis-host:6379

# JWT Secret for authentication
JWT_SECRET=your_secure_random_secret_here

# Payment Gateway (Razorpay/Stripe)
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret
# OR Stripe:
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Email Service (SendGrid or AWS SES)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@yourairline.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Port Configuration
PORT=4000
NLP_PORT=5000
